{
  "name": "Atlas77",
  "scopeName": "source.atlas77",
  "fileTypes": [
    "atlas"
  ],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#annotations" },
    { "include": "#functions" },
    { "include": "#literals" },
    { "include": "#structs" },
    { "include": "#constants" },
    { "include": "#fields" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.atlas77",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.atlas77",
          "match": "\\b(import|fun|package|struct|enum|union|while|if|else|match|extern|return|break|continue|panic)\\b"
        },
        {
          "name": "keyword.modifier.atlas77",
          "match": "\\b(let|var)\\b"
        },
        {
          "name": "keyword.storage.atlas77",
          "match": "\\b(this|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.atlas77",
          "match": "\\b(Int64|Int32|Int16|Int8|Bool|Float64|Float32|UInt64|UInt32|UInt16|UInt8|Str|Unit|Char)\\b"
        }
      ]
    },
    "structs": {
      "patterns": [
        {
          "name": "entity.name.struct.declaration.atlas77",
          "match": "\\b(struct)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "2": { "name": "entity.name.struct.atlas77" }
          }
        },
        {
          "name": "support.struct.usage.atlas77",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "support.struct.atlas77" }
          }
        }
      ]
    },
    "fields": {
      "patterns": [
        {
          "name": "variable.field.atlas77",
          "match": "\\b(this\\.([a-zA-Z_][a-zA-Z0-9_]*))\\b",
          "captures": {
            "1": { "name": "variable.field.reference.atlas77" },
            "2": { "name": "variable.field.name.atlas77" }
          }
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.declaration.atlas77",
          "match": "\\bfun\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\[\\s*[A-Z][a-zA-Z0-9_]*(\\s*,\\s*[A-Z][a-zA-Z0-9_]*)*\\])?\\s*\\("
        },
        {
          "name": "entity.name.function.call.atlas77",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "support.function.call.atlas77" }
          }
        },
        {
          "name": "entity.name.method.call.atlas77",
          "match": "\\b(this\\.[a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "support.method.call.atlas77" }
          }
        },
        {
          "name": "entity.name.method.namespace.atlas77",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)::([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "support.struct.namespace.atlas77" },
            "2": { "name": "support.method.namespace.atlas77" }
          }
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.atlas77",
          "match": "@(public|private|inline|deprecated|unstable)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.atlas77",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.atlas77",
          "match": "\\b[0-9]+(\\.[0-9]+)?(_[uUiIfF][0-9]+)?\\b"
        },
        {
          "name": "string.quoted.double.atlas77",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.atlas77", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.atlas77",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.atlas77", "match": "\\\\." }
          ]
        }
      ]
    }
  }
}
